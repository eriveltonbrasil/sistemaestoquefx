<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistemaestoquefx.FormularioClientesController">
   <children>
      <Pane prefHeight="80.0" prefWidth="900.0" style="-fx-background-color: #1A365D;">
         <children>
            <Label layoutX="32.0" layoutY="23.0" text="Cadastro de Clientes" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
         </children>
      </Pane>
      
      <TabPane fx:id="tabPane" layoutX="14.0" layoutY="95.0" prefHeight="420.0" prefWidth="870.0" style="-fx-background-color: white; -fx-border-color: #e2e8f0;" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Dados Pessoais">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="24.0" layoutY="30.0" text="Código:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtCodigo" editable="false" layoutX="80.0" layoutY="27.0" prefHeight="25.0" prefWidth="80.0" />
                        
                        <Label layoutX="180.0" layoutY="30.0" text="Nome:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtNome" layoutX="230.0" layoutY="27.0" prefHeight="25.0" prefWidth="400.0" />
                        
                        <Button layoutX="640.0" layoutY="27.0" mnemonicParsing="false" style="-fx-background-color: #e2e8f0;" text="Pesquisar" />

                        <Label layoutX="24.0" layoutY="80.0" text="E-mail:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtEmail" layoutX="80.0" layoutY="77.0" prefHeight="25.0" prefWidth="350.0" />
                        
                        <Label layoutX="450.0" layoutY="80.0" text="Celular:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtCelular" layoutX="510.0" layoutY="77.0" prefHeight="25.0" prefWidth="140.0" promptText="(  ) 90000-0000" />

                        <Label layoutX="670.0" layoutY="80.0" text="Telefone:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtTelefone" layoutX="740.0" layoutY="77.0" prefHeight="25.0" prefWidth="110.0" promptText="(  ) 0000-0000" />

                        <Label layoutX="24.0" layoutY="130.0" text="CEP:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtCep" layoutX="80.0" layoutY="127.0" prefHeight="25.0" prefWidth="120.0" />

                        <Label layoutX="220.0" layoutY="130.0" text="Endereço:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtEndereco" layoutX="290.0" layoutY="127.0" prefHeight="25.0" prefWidth="400.0" />

                        <Label layoutX="710.0" layoutY="130.0" text="Nº:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtNumero" layoutX="740.0" layoutY="127.0" prefHeight="25.0" prefWidth="110.0" />

                        <Label layoutX="24.0" layoutY="180.0" text="Bairro:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtBairro" layoutX="80.0" layoutY="177.0" prefHeight="25.0" prefWidth="200.0" />

                        <Label layoutX="300.0" layoutY="180.0" text="Cidade:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtCidade" layoutX="360.0" layoutY="177.0" prefHeight="25.0" prefWidth="200.0" />

                        <Label layoutX="580.0" layoutY="180.0" text="Compl:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtComplemento" layoutX="640.0" layoutY="177.0" prefHeight="25.0" prefWidth="110.0" />

                        <Label layoutX="760.0" layoutY="180.0" text="UF:"><font><Font size="14.0" /></font></Label>
                        <ComboBox fx:id="cbxEstado" layoutX="790.0" layoutY="177.0" prefHeight="25.0" prefWidth="80.0" />

                        <Label layoutX="24.0" layoutY="230.0" text="RG:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtRg" layoutX="80.0" layoutY="227.0" prefHeight="25.0" prefWidth="150.0" />

                        <Label layoutX="250.0" layoutY="230.0" text="CPF:"><font><Font size="14.0" /></font></Label>
                        <TextField fx:id="txtCpf" layoutX="290.0" layoutY="227.0" prefHeight="25.0" prefWidth="150.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Consulta de Clientes">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="24.0" layoutY="20.0" text="Nome:">
                           <font><Font size="14.0" /></font>
                        </Label>
                        <TextField fx:id="txtPesquisa" layoutX="70.0" layoutY="17.0" prefHeight="26.0" prefWidth="320.0" />
                        <Button layoutX="410.0" layoutY="17.0" mnemonicParsing="false" onAction="#pesquisarAction" style="-fx-background-color: #1A365D;" text="Pesquisar" textFill="WHITE" />
                        
                        <TableView fx:id="tabelaClientes" layoutX="14.0" layoutY="60.0" prefHeight="310.0" prefWidth="840.0">
                          <columns>
                            <TableColumn fx:id="colCodigo" prefWidth="50.0" text="Código" />
                            <TableColumn fx:id="colNome" prefWidth="150.0" text="Nome" />
                            <TableColumn fx:id="colRg" prefWidth="110.0" text="RG" />
                            <TableColumn fx:id="colCpf" prefWidth="110.0" text="CPF" />
                            <TableColumn fx:id="colEmail" prefWidth="180.0" text="E-mail" />
                            <TableColumn fx:id="colTelefone" prefWidth="110.0" text="Telefone" />
                            <TableColumn fx:id="colCelular" prefWidth="110.0" text="Celular" />
                            <TableColumn fx:id="colCep" prefWidth="80.0" text="CEP" />
                            <TableColumn fx:id="colEndereco" prefWidth="200.0" text="Endereço" />
                            <TableColumn fx:id="colNumero" prefWidth="60.0" text="Nº" />
                            <TableColumn fx:id="colComplemento" prefWidth="100.0" text="Compl." />
                            <TableColumn fx:id="colBairro" prefWidth="120.0" text="Bairro" />
                            <TableColumn fx:id="colCidade" prefWidth="120.0" text="Cidade" />
                            <TableColumn fx:id="colUf" prefWidth="50.0" text="UF" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
      
      <HBox alignment="CENTER" layoutY="535.0" prefHeight="40.0" prefWidth="900.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#novoAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #2563EB; -fx-font-weight: bold;" text="Novo" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#salvarAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #16a34a; -fx-font-weight: bold;" text="Salvar" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#editarAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #f59e0b; -fx-font-weight: bold;" text="Editar" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#excluirAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #ef4444; -fx-font-weight: bold;" text="Excluir" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#relatorioAction" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #64748b; -fx-font-weight: bold;" text="Relatório" textFill="WHITE" />
         </children>
      </HBox>
   </children>
</AnchorPane>